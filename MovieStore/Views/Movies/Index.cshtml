@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers
@model IEnumerable<Movie>

@{
    ViewBag.Title = "Index Page";
}

<div class="row">
    @foreach (var movie in Model)
    {
        <div class="card m-2" style="width:18rem;">

            <div class="card-header alert-primary">
                <h5 class="card-title">@movie.MovieName</h5>
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item">@movie.DirectorName</li>
                <li class="list-group-item">@movie.ReleaseDate.ToLongDateString()</li>
            </ul>
            <div class="card-footer">
                <a asp-controller="Movies" asp-action="Details" asp-route-id="@movie.Id" class="btn btn-info">Details</a>
                <button class="btn btn-success">Edit</button>
                <button class="btn btn-danger">Delete</button>
            </div>
        </div>
       
    }
</div>