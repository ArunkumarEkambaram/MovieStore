@model MovieViewModel

@{
    ViewBag.Title = "Edit Movie";
}

<form asp-controller="Movies" asp-action="Edit" method="post">
    <div class=" col-md-5">
        <div class="form-group">
            <input asp-for="Id"/>
        </div>
        <div class="form-group">
            <label asp-for="MovieName"></label>
            <input asp-for="MovieName" class="form-control" />
            <span asp-validation-for="MovieName"></span>
        </div>
        <div class="form-group">
            <label asp-for="DirectorName"></label>
            <input asp-for="DirectorName" class="form-control" />
            <span asp-validation-for="DirectorName"></span>
        </div>
        <div class="form-group">
            <label asp-for="ReleaseDate"></label>
            <input asp-for="ReleaseDate" class="form-control" />
            <span asp-validation-for="ReleaseDate"></span>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-outline-primary">Submit</button>
        </div>
    </div>
</form>
